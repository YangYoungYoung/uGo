<!--pages/register/register.wxml-->
<view class='container'>
  <view class='phone-view'>
    <text class='left-text'>手机号：</text>
    <input class='phone-input' type="number" placeholder="请输入手机号" maxlength="11" bindinput="getPhone"></input>
  </view>

  <view class='code-view'>

    <view class='code-boder-view'>
      <text class='left-text'>验证码：</text>
      <input class='code-input' type="number" placeholder="请输入验证码" maxlength="11" bindinput="getCode"></input>
    </view>
    <view class='getCodeView'>获取</view>
  </view>

  <!-- <view class='pwd-view'>

  </view> -->
  <view class='pwd-view'>
    <text class='pwd-text'>设置密码：</text>
    <input class='phone-input' style='width:498rpx;' type="number" placeholder="请输入6-12位密码" maxlength="12" bindinput="getPwd"></input>
  </view>

    <view class='pwd-view'>
    <text class='pwd-text'>确认密码：</text>
    <input class='phone-input' style='width:498rpx;' type="number" placeholder="请重新输入密码" maxlength="12" bindinput="getPwd"></input>
  </view>

  <view class='pwd-view'>
    <text class='pwd-text'>积分支付密码：</text>
    <input class='phone-input' style='width:432rpx;' type="number" placeholder="请输入6位数字" maxlength="12" bindinput="getPwd"></input>
  </view>

    <view class='pwd-view'>
    <text class='pwd-text'>确认积分支付密码：</text>
    <input class='phone-input' style='width:366rpx;' type="number" placeholder="请重新输入密码" maxlength="12" bindinput="getPwd"></input>
  </view>

  <button class='register-btn' bindtap='toRegister'>注册</button>

</view>