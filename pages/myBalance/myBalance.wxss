/* pages/myBalance/myBalance.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
}

.balance-image {
  width: 168rpx;
  height: 168rpx;
  margin-top: 48rpx;
}

.balance-text {
  font-size: 42rpx;
  color: #313131;
  margin-top: 20rpx;
}

.withdraw-btn {
  width: 686rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #e9af3c;
  /* box-shadow: 0rpx 2rpx 2rpx 1rpx rgba(229, 229, 229, 1); */
  border-radius: 44rpx;
  color: #fff;
  margin-top: 24rpx;
}

.explain-view {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  margin-top: 24rpx;
}

.explain-line {
  width: 271rpx;
  height: 2rpx;
  background-color: #c1c1c1;
  /* margin-left: 32rpx; */
}

.explain-text {
  margin-left: 16rpx;
  margin-right: 16rpx;
  color: #616161;
  font-size: 28rpx;
}

.explain-content {
  width: 100%;
  
  color: #919191;
  display: flex;
  flex-direction: column;
}

.explain-content text {
  margin-left: 32rpx;
  font-size: 25rpx;
}

.balance-line {
  width: 686rpx;
  height: 1rpx;
  background-color: #c1c1c1;
  margin-top: 24rpx;
}
