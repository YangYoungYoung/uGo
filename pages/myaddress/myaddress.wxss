/* pages/myaddress/myaddress.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  color: #313131;
  font-size: 28rpx;
}

.list-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 126rpx;
}

.name-phone {
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
  margin-top: 25rpx;
}

.phone {
  margin-left: 80rpx;
}

.address-edit {
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
  justify-content: space-between;
}

.edit {
  width: 24rpx;
  height: 24rpx;
  /* background: #000; */
  margin-right: 25rpx;
}

.footer {
  width: 100%;
  height: 88rpx;
  background-color: #e83d2c;
  text-align: center;
  align-items: center;
  bottom: 0;
  position: fixed;
  line-height: 88rpx;
  color: #fff;
  font-size: 38rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background: rgba(193, 193, 193, 1);
  margin-top: 10rpx;
  /* border: 1rpx solid rgba(193, 193, 193, 1); */
}
