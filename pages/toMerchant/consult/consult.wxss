/* pages/toMerchant/consult/consult.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.info-view {
  width: 686rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-radius: 8rpx;
  border: 1px solid rgba(193, 193, 193, 1);
  margin-top: 48rpx;
  align-items: center;
  justify-content: space-between;
}

.info-text {
  color: #313131;
  font-size: 32rpx;
  margin-left: 24rpx;
}

.info-input {
  width: 535rpx;
  font-size: 32rpx;
  color: #313131;
}

.more-img {
  width: 34rpx;
  height: 18rpx;
  margin-right: 24rpx;
}

.summit-btn {
  width: 686rpx;
  height: 80rpx;
  background-color: #e9af3c;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  margin-top: 98rpx;
  border-radius: 44rpx;
}

.summit-btn::after {
  border: none;
}

.more-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-top: 12rpx;
  z-index: 999;
}

.more-list {
  width: 559rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(193, 193, 193, 1);
  margin-right: 32rpx;
}

.more-item {
  height: 86rpx;
  font-size: 32rpx;
  color: #313131;
  margin-left: 24rpx;
}

.more-line {
  width: 559rpx;
  height: 1rpx;
  background-color: #c1c1c1;
}

.picker-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.picker {
  width: 100%;
}

.picker-text {
  width: 128rpx;
  font-size: 32rpx;
  color: #313131;
  margin-left: 32rpx;
  text-align: center;
}

.info-text {
  font-size: 32rpx;
  color: #313131;
  text-align: left;
}

/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog{
  width: 100%;
  overflow: hidden;
  position: fixed;
  top: 30%;
  /* left: 0; */
  z-index: 9999;
  align-items: center;
  display: flex;
  flex-direction: column;
  /* background: #f9f9f9; */
  /* margin: -180rpx 60rpx; */
  /* border-radius: 36rpx; */
}
.modal-img {
  width: 560rpx;
  height: 433rpx;
}

.modal-close {
  position: fixed;
  right: 0;
  margin-right: 70rpx;
  margin-top: -30rpx;
  width: 72rpx;
  height: 72rpx;
}


