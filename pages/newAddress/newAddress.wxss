/* pages/newAddress/newAddress.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #313131;
  font-size: 28rpx;
}

.name-view {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  
  margin-top: 24rpx;
}

.name-text {
  margin-left: 24rpx;
  width: 140rpx;
}

.inputText {
  flex: block;
  width: 90%;
  color: #545454;
  /* text-align: center; */
  margin-left: 24rpx;
}

.cityText{
  color: #313131;
  font-size: 28rpx;
  text-align: center;
  width:auto;
}

.line {
  width: 100%;
  margin-top: 23rpx;
  height: 2rpx;
  background: rgba(193, 193, 193, 1);
  /* border: 1rpx solid rgba(193, 193, 193, 1); */
}

/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-area{
  width: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 9999;
  top: 10%;
}
.footer{
  width: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
  background-color: #E83D2C;
  font-size: 32rpx;
  color: #fff;
  height: 88rpx;
  position: fixed;
  bottom: 0;
  line-height: 88rpx;
}