.scroll {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  box-sizing: border-box;
}

.shop-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.shop-list-item {
  width: 702rpx;
  height: 228rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.shop-item-image {
  display: block;
}

.shop-item-logo {
  width: 180rpx;
  height: 180rpx;
  margin: 24rpx;
}

.shop-item-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* text-align: center; *//* align-items: center; */
  margin: 38rpx 24rpx 38rpx 0rpx;
  box-sizing: border-box;
}

.shop-info-name {
  font-size: 32rpx;
}

.shop-info-location-distance {
  display: flex;
  flex-direction: row;
  text-align: center;
  font-size: 24rpx;
  align-items: center;
  justify-content: space-between;
}

.shop-info-location {
  display: flex;
  flex-direction: row;
  margin: 24rpx 0;
}

.shop-info-loca {
  margin-left: 24rpx;
}

.shop-info-discounts {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.shop-discounts-logo {
  width: 30rpx;
  height: 36rpx;
}

.shop-discounts-text {
  font-size: 28rpx;
  color: #f00;
  margin-left: 16rpx;
}

.shop-discounts-end {
  width: 16rpx;
  height: 28rpx;
  margin-left: 8rpx;
}
