/* pages/login/login.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-img {
  width: 280rpx;
  height: 280rpx;
  margin-top: 50rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.inputView {
  width: 100%;
  margin-top: 64rpx;
  background-color: #fff;
  line-height: 44px;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  font-size: 36rpx;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 32rpx;
  width: 42rpx;
  height: 48rpx;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  margin-left: 16rpx;
  flex: block;
  float: right;
  text-align: left;
  margin-right: 22px;
  margin-top: 11px;
  color: #545454;
  font-size: 14px;
  width: 600rpx;
}

.line {
  width: 686rpx;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
  align-items: center;
}

.login-btn {
  width: 686rpx;
  height: 88rpx;
  background-color: #e83d2c;
  margin-top: 88rpx;
  font-size: 36rpx;
  color: #fff;
}

.login-bottom {
  width: 100%;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 32rpx;
  color: #e83d2c;
}

.register-text {
  margin-left: 132rpx;
}

.forget-text{
  margin-right: 132rpx;
}
