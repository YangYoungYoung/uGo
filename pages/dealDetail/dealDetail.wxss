/* pages/dealDetail/dealDetail.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-view {
  width: 100%;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.title-left {
  width: 207rpx;
  height: 56rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title-left-time{
  color: #616161;
  font-size: 28rpx;
  margin-left: 6rpx;
}

.title-left-icon {
  margin-left: 12rpx;
  width: 22rpx;
  height: 14rpx;
}

.title-right {
  display: flex;
  flex-direction: column;
  margin-right: 32rpx;
}

.income {
  font-size: 28rpx;
  color: #616161;
}

.content-list {
  width: 100%;
  background-color: #fff;
}

.list-item {
  width: 100%;
  height: 116rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.item-left {
  /* height: 116rpx; */
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
}

.left-title {
  font-size: 28rpx;
  color: #313131;
  font-weight: bold;
}

.left-time {
  font-size: 24rpx;
  color: #616161;
  margin-top: 6rpx;
}

.item-right {
  margin-right: 32rpx;
  color: #313131;
  font-size: 40rpx;
}

.item-line {
  width: 718rpx;
  margin-left: 32rpx;
  height: 2rpx;
  background-color: #c1c1c1;
  /* border:1rpx solid rgba(193,193,193,1); */
}
