/* pages/payment/payment.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-view {
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  background: #fff;
}

.order-text {
  margin-left: 32rpx;
  font-size: 28rpx;
  color: #313131;
}

.order-input {
  width: 500rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  text-align: left;
}

.title {
  width: 100%;
  height: 72rpx;
}

.title-text {
  font-size: 28rpx;
  color: #313131;
  margin-left: 32rpx;
}

.coupon {
  width: 100%;
  height: 123rpx;
  display:  flex;
  flex-direction: row;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}

.coupon-left{
  display: flex;
  flex-direction: row;
  margin-left: 32rpx;
}

.coupon-img{
  width: 88rpx;
  height: 60rpx;
}

.coupon-text{
  font-size: 32rpx;
  color: #313131;
  margin-left: 24rpx;
  font-weight: bold;
}

.coupon-right{
  display: flex;
  flex-direction: row;
  
}
.coupon-money{
  font-size: 32rpx;
  color: #616161;
  margin-right: 26rpx;
}

.payment-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 123rpx;
  background: #fff;
}

.payment-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left-img {
  margin-left: 32rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.content-top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content-name {
  font-size: 32rpx;
  color: #313131;
  font-weight: bolder;
}

.recommend-logo {
  width: 64rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

.content-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #616161;
}

.check-box {
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}

.payment-btn {
  width: 686rpx;
  height: 88rpx;
  background-color: #f60;
  border-radius: 8px;
  position: fixed;
  bottom: 0;
  margin-bottom: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fbfbfb;
  font-size: 36rpx;
}
