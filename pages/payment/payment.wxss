/* pages/payment/payment.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.order-view {
  width: 100%;
  height: 92rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.order-text {
  margin-left: 32rpx;
  font-size: 28rpx;
  color: #313131;
}

.order-input {
  width: 500rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  text-align: left;
}

.title {
  width: 100%;
  height: 72rpx;
  background-color: #f0f0f0;
}

.title-text {
  font-size: 28rpx;
  color: #313131;
  margin-left: 32rpx;
}

.payment-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 123rpx;
  
}

.payment-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left-img {
  margin-left: 32rpx;
}
.content{
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.content-top{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.content-name{
  font-size: 32rpx;
  color: #313131;
  font-weight: bolder;
}

.recommend-logo{
  width: 64rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

.content-text{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #616161;
}

.check-box{
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}
