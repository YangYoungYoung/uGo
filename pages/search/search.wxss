/* pages/search/search.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #313131;
}

.search {
  width: 100%;
  /* z-index: 999;
  position: fixed;
  top: 0; */
}

.found {
  /* width: 100%; */
  display: flex;
  flex-direction: column;
  margin: 32rpx 24rpx 0 24rpx;
}

.found-text {
  font-size: 28rpx;
}

.found-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.found-list-item {
  /* width: 98rpx; */
  min-width: 98rpx;
  height: 64rpx;
  background: rgba(229, 229, 229, 1);
  border-radius: 28rpx;
  text-align: center;
  align-items: center;
  line-height: 64rpx;
  font-size: 28rpx;
  margin-right: 14rpx;
}

.found-list-item-text {
  padding: 21rpx 22rpx;
}

.found-line {
  width: 100%;
  height: 1rpx;
  background: #c1c1c1;
  margin-top: 32rpx;
}

.found-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}

.found-delete {
  width: 24rpx;
  height: 31rpx;
}

.local-search {
  display: flex;
  flex-direction: column;
  margin: 0 24rpx;
}

.local-title {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.local-icon {
  width: 24rpx;
  height: 34rpx;
}

.local-text {
  font-size: 28rpx;
  margin-left: 8rpx;
}

.local-more {
  width: 24rpx;
  height: 20rpx;
  margin-left: 16rpx;
}

local-list {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
}

.local-list-item {
  font-size: 28rpx;
  margin-right: 32rpx;
}

.scroll {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  box-sizing: border-box;
}

.shop-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.shop-list-item {
  width: 702rpx;
  height: 228rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.shop-item-image {
  display: block;
}

.shop-item-logo {
  width: 180rpx;
  height: 180rpx;
  margin: 24rpx;
}

.shop-item-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* text-align: center; *//* align-items: center; */
  margin: 38rpx 24rpx 38rpx 0rpx;
  box-sizing: border-box;
}

.shop-info-name {
  font-size: 32rpx;
}

.shop-info-location-distance {
  display: flex;
  flex-direction: row;
  text-align: center;
  font-size: 24rpx;
  align-items: center;
  justify-content: space-between;
}

.shop-info-location {
  display: flex;
  flex-direction: row;
  margin: 24rpx 0;
}

.shop-info-loca {
  margin-left: 24rpx;
}

.shop-info-discounts {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.shop-discounts-logo {
  width: 30rpx;
  height: 36rpx;
}

.shop-discounts-text {
  font-size: 28rpx;
  color: #f00;
  margin-left: 16rpx;
}

.shop-discounts-end {
  width: 16rpx;
  height: 28rpx;
  margin-left: 8rpx;
}
