/* pages/drawings/drawings.wxss */

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 16rpx 0rpx;
  background: #fff;
  text-align: center;
  align-items: center;
}

.title-left {
  font-size: 28rpx;
  color: #919191;
  margin-left: 24rpx;
}

.title-right {
  font-size: 22rpx;
  color: #e83d2c;
  margin-right: 24rpx;
}

.drawings-view {
  width: 100%;
  height: 88rpx;
  background-color: #f0f0f0;
  align-items: center;
  line-height: 88rpx;
}

.drawings-text {
  margin-left: 32rpx;
  font-size: 32rpx;
  height: 100%;
  color: #313131;
  font-weight: 500;
  line-height: 88rpx;
}

.current-state {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 16rpx;
  text-align: center;
  align-items: center;
  font-size: 28rpx;
  justify-content: space-between;
}

.current-left {
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-left: 24rpx;
}

.available-balance {
  color: #919191;
}

.available-balance-text {
  color: #d97306;
}

.current-right {
  color: #34a263;
  margin-right: 24rpx;
}

.withdraw-check {
  display: flex;
  flex-direction: row;
  margin-top: 25rpx;
  margin-left: 24rpx;
  color: #313131;
  font-size: 32rpx;

}

.weixin-view {
  display: flex;
  flex-direction: row;
  width: 197rpx;
  height: 48rpx;
  border-radius: 4px;
  border: 1px solid rgba(193, 193, 193, 1);
}

