/* pages/liveStreaming/liveStreaming.wxss */

.page-body {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #fbfbfb;
  font-size: 24rpx;
}

.live-player {
  width: 100%;
  z-index: -1;
  /* background: #6666; */
}

.top {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  z-index: 999;
  margin-top: 35rpx;
}

.head-image {
  width: 82rpx;
  height: 82rpx;
  margin-left: 24rpx;
  border-radius: 50%;
  background: #fff;
}

.top-content {
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.content-title {
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
}

.title-view {
  width: 1rpx;
  height: 32rpx;
  background: #fff;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.content-number {
  margin-top: 8rpx;
}

.bottome {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  z-index: 999;
  bottom: 0;
  padding-bottom: 24rpx;
  text-align: center;
  align-items: center;
  background-color: #000;
  padding-top: 24rpx;
}

.zb-cart {
  width: 75rpx;
  height: 82rpx;
  margin-left: 30rpx;
}

.bottom-input {
  width: 652rpx;
  height: 64rpx;
  background-color: #fff;
  color: #000;
  line-height: 64rpx;
  font-size: 24rpx;
}

.bottom-btn {
  width: 98rpx;
  height: 64rpx;
  background-color: #e83d2c;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 64rpx;
}

.bottom-input-view {
  width: 370rpx;
  height: 64rpx;
  background: #eee;
  border-radius: 8rpx;
  margin-left: 30rpx;
  opacity: 0.7489;
  font-size: 24rpx;
  color: #313131;
  text-align: center;
  line-height: 64rpx;
}

.zb-share {
  width: 68rpx;
  height: 50rpx;
  margin-left: 24rpx;
}

.zb-collect {
  width: 68rpx;
  height: 63rpx;
  margin-left: 48rpx;
}

.zb-content {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 300rpx;
  position: fixed;
  bottom: 0;
  z-index: 999;
  margin-bottom: 121rpx;
  color: #fff;
  justify-content: space-between;
}

.zb-content-left {
  margin-left: 24rpx;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
}

.zb-content-text {
  word-break: break-all;
}

.zb-content-title {
  width: 140rpx;
  height: 36rpx;
  border-radius: 16rpx;
  background: #e83d2c;
  text-align: center;
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_view {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.commodity_title {
  width: 702rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.reddot {
  box-sizing: border-box;
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 50%;
  line-height: 28rpx;
  background: #e83d2c;
  text-align: center;
  color: white;
  font-size: 20rpx;
  margin-top: -80rpx;
  z-index: 999;
  margin-left: 50rpx;
}

.commodity_text {
  font-size: 24rpx;
  color: #fbfbfb;
}

.commodity_image {
  width: 84rpx;
  height: 80rpx;
}

.commodity_attr_box {
  margin-top: 25rpx;
  width: 702rpx;
  height: 862rpx;
  background: #fff;
  padding: 20rpx 3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  border-radius: 16rpx 16rpx 0rpx 0rpx;
}

.shop-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.shop-item-icon {
  width: 144rpx;
  height: 144rpx;
}

.shop-item-content {
  display: flex;
  flex-direction: column;
  width: 410rpx;
  margin-left: 24rpx;
}

.item-content-name {
  font-size: 24rpx;
  color: #313131;
}

.item-content-price {
  font-size: 24rpx;
  color: #e83d2c;
  margin-top: 12rpx;
}

.item-content-cart {
  width: 52rpx;
  height: 48rpx;
  margin-left: 24rpx;
}

.line {
  margin-top: 24rpx;
  width: 654rpx;
  height: 2rpx;
  background: rgba(193, 193, 193, 1);
}

.commodity_detail {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.detail_close {
  display: inline;
  width: 24rpx;
  height: 24rpx;
  margin-top: 24rpx;
  float: right;
}

.detail_left {
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
  align-items: center;
}

.detail_image {
  width: 144rpx;
  height: 144rpx;
}

.detail_info {
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.detail_price {
  color: #e83d2c;
  font-size: 32rpx;
}

.detail_inventory {
  color: #616161;
  font-size: 24rpx;
}

.detail_buyNum {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.buy_text {
  color: #313131;
  font-size: 24rpx;
}

.detail_line {
  width: 654rpx;
  height: 1rpx;
  margin-top: 24rpx;
  background: #c1c1c1;
}

.footer {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  margin-bottom: 23rpx;
}

.footer_btn {
  width: 327rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #fbfbfb;
  font-size: 28rpx;
  text-align: center;
}

/* 评论列表 */

.msgs-wrapper {
  position: absolute;
  bottom: 20rpx;
  left: 10rpx;
  right: 10rpx;
  /* height: 200rpx; */
}

.msgs {
  max-width: 100%;
  display: block;
  padding: 3rpx;
  color: #fff;
  margin: 3rpx 0;
  word-wrap: break-word;
}

.msg-item {
  padding: 5rpx 5rpx;
  border-radius: 4rpx;
  font-size: 14px;
  display: flex;
  flex-direction: row;
}

.nickname {
  color: #ff7906;
}

.buy-num {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0;
  display: flex;
  /*justify-content: space-between;*/
  font-size: 24rpx;
  text-align: center;
}

.jian-btn {
  width: 48rpx;
  height: 100%;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}

.jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.jia-btn {
  width: 48rpx;
  height: 100%;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.jia-btn.disabled {
  background-color: #f5f5f9;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.input-view {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
}
